---
import MainLayout from "../layouts/MainLayout.astro";
import { SITE } from "../data_files/constants";
import type { Event } from "../utils/events";
import { events } from "../utils/events";

const title = "Events";
const meta = {
  title: `${SITE.title}: Events`,
  description: "View all upcoming events and workshops",
};
---

<MainLayout title={title} meta={meta}>
  <main class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl dark:text-white">Upcoming Events</h1>
      <p class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300">
        Join us for our upcoming events and workshops
      </p>
    </div>

    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {events.map((event) => (
        <article class="flex flex-col items-start justify-between bg-white dark:bg-neutral-800 rounded-lg p-6 shadow-sm">
          <div class="relative w-full">
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 dark:text-white">
              {event.title}
            </h3>
            <p class="mt-5 text-sm leading-6 text-gray-600 dark:text-gray-300">{event.description}</p>
          </div>
          <div class="mt-8 flex items-center gap-x-4 text-xs">
            <time datetime={event.date} class="text-gray-500 dark:text-gray-400">
              {event.date}
            </time>
            <span class="relative z-10 rounded-full bg-gray-50 dark:bg-neutral-700 px-3 py-1.5 font-medium text-gray-600 dark:text-gray-300">
              {event.time}
            </span>
            <span class="relative z-10 rounded-full bg-gray-50 dark:bg-neutral-700 px-3 py-1.5 font-medium text-gray-600 dark:text-gray-300">
              {event.location}
            </span>
          </div>
          <div class="mt-4">
            <a
              href={event.registrationLink}
              class="rounded-md bg-orange-400 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600"
            >
              Register Now
            </a>
          </div>
        </article>
      ))}
    </div>
  </main>
</MainLayout> 