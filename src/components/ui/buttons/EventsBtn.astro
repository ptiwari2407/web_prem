---
const { title = "Events" } = Astro.props;

interface Props {
  title?: string;
}

const baseClasses = "flex items-center gap-x-2 font-medium text-neutral-500 hover:text-neutral-800 md:border-s md:border-neutral-300 md:ps-6 dark:text-neutral-400 dark:hover:text-neutral-200";
const mdClasses = "md:py-6";
const txtSizeClasses = "text-sm";

const calendarSVG = `<svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
  <line x1="16" y1="2" x2="16" y2="6"></line>
  <line x1="8" y1="2" x2="8" y2="6"></line>
  <line x1="3" y1="10" x2="21" y2="10"></line>
</svg>`;
---

<button
  type="button"
  class={`${baseClasses} ${mdClasses} ${txtSizeClasses}`}
  data-hs-overlay="#events-modal"
>
  <Fragment set:html={calendarSVG} />
  {title}
</button>