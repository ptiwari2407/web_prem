---
interface Props {
  quote: string;
  author: string;
  authorTitle: string;
}

const { quote, author, authorTitle } = Astro.props;
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
  <div class="mx-auto max-w-2xl text-center">
    <blockquote class="relative">
      <p class="text-xl italic text-gray-800 dark:text-gray-200 sm:text-2xl">
        "{quote}"
      </p>
      <footer class="mt-4">
        <div class="flex items-center justify-center space-x-3">
          <div class="flex flex-col">
            <span class="text-lg font-semibold text-gray-800 dark:text-gray-200">{author}</span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{authorTitle}</span>
          </div>
        </div>
      </footer>
    </blockquote>
  </div>
</section>